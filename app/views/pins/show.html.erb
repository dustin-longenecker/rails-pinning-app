<div class="header">
  <h1>
  <a href="/"><i class="fa fa-laptop"></i></a>
  <%= "#{@pin.title}" %>
  </h1>
</div>
<div class="show-pin">
  <% if @pin.image.url.nil? %>
    <p>ERROR</p>
    <% else %>
    <%= image_tag(@pin.image.url(:medium)) %>
    <% end %>
  <p><%= "#{@pin.id}"%></p>
  <p><%= "#{@pin.text}" %></p>
  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    
    <%= link_to "#{@pin.url.truncate(30)}", "#{@pin.url}", html_options = {target: "_blank", class: "url"} %>
  </p>

  <!-- DELETE BUTTON -->
  
  <%= form_with model: @pin, url: "/pins/#{@pin.id}", method: "delete" do |f| %>
  <div class="form-group">
    <%= f.submit :Delete, class: "btn btn-default pinterest-theme-button"%>
  </div>
  <% end %>
</div>
<br/>
<a href="/">
  <!-- Your icon goes here!-->
  <i class="fa fa-arrow-left"></i>
</a>