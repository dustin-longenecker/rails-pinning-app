<div class="header">
  <h1>Learning to Code</h1>
  <h3>A Collection of Ruby on Rails Resources for Beginners</h3>
</div>
<hr/>
<div class="pins">
  <%= link_to "CREATE", "/pins/new" %>
  <% @pins.each_slice(3) do |row| %>
  <div class="row">
    <% row.each do |pin| %>
    <div class="pin-container col-md-4">
      <div class="pin">
        <div class="pin-header row">
          <div class="logo-thumbnail col-xs-3">
            <% if "#{pin.category.name}" == "rails" %>
            <%= image_tag('rails-logo-thumbnail.png') %>
            <% elsif "#{pin.category.name}" == "ruby" %>
            <%= image_tag('ruby-logo-thumbnail.png') %>
            <% end %>
          </div>
          <div class="pin-title col-xs-9">
            <h4>
            <%= link_to "#{pin.title}", pin_by_name_path(slug: pin.slug) %>
            <!-- -->
            </h4>
          </div>
        </div>
        <div class="pin-image row">
          <figure class="figure col-xs-12 figure-img">
            <%= image_tag(pin.image.url(:medium), class: "figure-img img-fluid") %>
            <%= link_to "#{pin.url.truncate(30)}", "#{pin.url}", html_options = {target: "_blank", class: "url figure-caption"} %>
          </figure>
        </div>
        <hr/>
          <p class="text"><%= "#{pin.text}" %></p>

        <div class="pin-options row">
          <%= pin.id %>
          <%= link_to "EDIT", "/pins/#{pin.id}/edit" %>
          
          
          <%= form_with model: pin, url: "/pins/#{pin.id}", method: "delete" do |f| %>
          <div class="form-group">
            <%= f.submit :Delete, class: "btn btn-default pinterest-theme-button"%>
          </div>
          <% end %>
        </div>
        
        
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
<hr/>