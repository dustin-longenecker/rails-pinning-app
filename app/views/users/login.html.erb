<h2>LOGIN</h2>
  <% if @errors %>
    <div id="error_explanation">
      <h2><%= pluralize(@errors, "error") %></h2>

      <ul>
        <li><%= @errors %></li>
      </ul>
    </div>
  <% end %>
  <%= form_tag "/login" do %>

	<%= text_field_tag :email, 'email', maxlength: 99, size: 20, class: "form-grp" %>
	<%= text_field_tag :password, 'password', maxlength: 15, size: 20, class: "form-grp" %>
	<%= submit_tag :login %>

  <%end%>


<%= link_to 'Back', users_path %>